# http://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8
end_of_line = lf
max_line_length = 120

[*.bat]
indent_style = tab
end_of_line = crlf

[*.py]
indent_size = 4

[LICENSE]
insert_final_newline = false

[Makefile]
indent_style = tab

[{package.json,.travis.yml}]
indent_style = space
indent_size = 2
